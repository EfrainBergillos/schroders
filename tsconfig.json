{
  "rootDir": "./src",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": false,
    "sourceMap": true,
    "paths": {
      "@modules/*": ["./src/modules/*"]
    }
  }
}
